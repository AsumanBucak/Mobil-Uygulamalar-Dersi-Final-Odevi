<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_bg_color"
    tools:context=".SnackBarFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snack Bar Oluşturucu"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:textSize="28sp"/>

    <EditText
        android:id="@+id/editTextMesaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mesajınızı giriniz"
        android:layout_marginTop="24dp"
        android:layout_marginStart="36dp"
        android:layout_gravity="center"
        android:layout_marginEnd="36dp"/>

    <EditText
        android:id="@+id/editTextAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Action ismi giriniz"
        android:layout_marginTop="24dp"
        android:layout_marginStart="36dp"
        android:layout_gravity="center"
        android:layout_marginEnd="36dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        />


</LinearLayout>