<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RgbFragment"
    android:id="@+id/mainLayout"
    android:background="@color/blue_bg_color"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>
    
    <RelativeLayout
        android:id="@+id/relativeLayoutSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_centerVertical="true"/>


        <SeekBar
            android:id="@+id/seekbarRed"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:max="255"
            android:progress="0"
            android:progressDrawable="@android:color/transparent"
            android:thumb="@drawable/dikdorgen"
            android:thumbTint="@color/red"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutSeekbarGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_centerVertical="true"/>


        <SeekBar
            android:id="@+id/seekbarGreen"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:max="255"
            android:progress="188"
            android:progressDrawable="@android:color/transparent"
            android:thumb="@drawable/dikdorgen"
            android:thumbTint="@color/green"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutSeekbarBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_centerVertical="true"/>


        <SeekBar
            android:id="@+id/seekbarBlue"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:max="255"
            android:progress="212"
            android:progressDrawable="@android:color/transparent"
            android:thumb="@drawable/dikdorgen"
            android:thumbTint="@color/blue"
            />

    </RelativeLayout>
    
    <TextView
        android:id="@+id/textViewRgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#00bcd4"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="32sp"
        android:textStyle="bold"/>

</LinearLayout>